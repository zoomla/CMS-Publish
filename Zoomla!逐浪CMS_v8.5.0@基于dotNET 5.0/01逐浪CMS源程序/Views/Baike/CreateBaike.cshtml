@{
Layout = "~/Views/Baike/_BaikeLayout.cshtml";
}
@section head{<title>创建词条-@Call.SiteName 百科</title>}
@section content{
<div class="container">
<ol class="breadcrumb margin_top10">
<li><a href="/Baike" target="_self">百科中心</a></li>
<li class="active">创建词条</li>
</ol>
<h1>请输入你要创建的词条：</h1>
<form method="post" action="@MVCHelper.GetAction("Baike_Create", Context.Request)">
<div class="input-group">
	<input type="text" class="form-control required" id="creatbai" name="creatbai" />
	<span class="input-group-btn">
		<input type="submit" class="btn btn-primary" id="save" value="创建词条" />
	</span>
</div>
</form>
</div>
}
@section script{
<script>
$("form").validate();
</script>
}