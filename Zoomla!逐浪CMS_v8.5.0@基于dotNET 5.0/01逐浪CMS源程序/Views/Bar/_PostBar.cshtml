@MvcHtmlString.Create(ZoomLa.Components.SiteConfig.SiteInfo.Copyright)
</div>
</footer>
</div>
@RenderSection("script")
<script>
$().ready(function (e) {
$(window).scroll(function () {
if ($(window).scrollTop() >= 50) {
$(".index_totop").animate({ right: '0' });
}
else {
$(".index_totop").animate({ right: '-71px' });
}
});

$(".index_totop").click(function () {
$("body").animate({ scrollTop: 0 }, 1000, function () {
$(".index_totop").animate({ right: '-71px' });
});
});
})
$(function () {
$("#souchkey").val("@Context.Request.GetParam("skey")".replace(/\|/g, " "));
})
function SearchStr() {
var key = $("#souchkey").val().replace(" ", "");
if (key != "") {
var searchstr = $("#souchkey").val().trim().replace(/ +/g, '|');
location = "postsearch?skey=" + searchstr.trim();
}
}
var diag = new ZL_Dialog();
diag.title = "社区帮助";
diag.width = 600;
diag.content = "helpdiv";
function ShowHelp() {
diag.ShowModal();
}
</script>
</body>
