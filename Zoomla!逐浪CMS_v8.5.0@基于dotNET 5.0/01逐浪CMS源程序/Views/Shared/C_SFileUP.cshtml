@model ZoomLaCMS.Control.C_SFileUP
@functions{
    public IHtmlContent GetFileType()
    {
        string result = "";
        switch (Model.FileType)
        {
            case "img":
                result = "accept=\"image/*\"";//移动端可调起摄像头
                break;
            case "video":
                result = "accept=\"audio/mp4,video/mp4\"";
                break;
            default:
                result = "";
                break;
        }
        return MvcHtmlString.Create(result);
    }
}
