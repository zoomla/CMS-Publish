@using ZoomLa.Model.Extend
@using ZoomLa.BLL.Extend
@model ZoomLa.Model.Extend.M_AD_Info
@{ 

}
@{ 

}
<style>
.ad_tcck_@Model.ID {position: fixed;top: 0;right: 0;bottom: 0;left: 0;z-index: 1050;display: none;/*overflow: hidden;*/-webkit-overflow-scrolling: touch;outline: 0;overflow-x: hidden;overflow-y: auto;}
.ad_tcck_@Model.ID .modal-dialog {position: relative;width: 700px;margin: 140px auto 35px;}
.ad_tcck_@Model.ID .modal-content {position: relative;-webkit-background-clip: padding-box;background-clip: padding-box;border-radius: 6px;outline: 0;}
@*.ad_tcck_@Model.ID img{width:100%;border:0 none;}
.ad_tcck_@Model.ID .modal-header {position: absolute;right:5%;min-height: 16.42857143px;padding: 0.5rem 0.5rem;}*@
@Html.Raw(Model.Style)
.ad_tcck_@Model.ID .modal-header .close {margin-top: -2px;}
.ad_tcck_@Model.ID .close {float: right;font-size: 21px;font-weight: bold;line-height: 1;color: #eee;}
.ad_tcck_@Model.ID .close:hover,.ad_tcck_@Model.ID .close:focus {color: #fff;text-decoration: none;cursor: pointer;}
.ad_tcck_@Model.ID button.close {-webkit-appearance: none;padding: 0;cursor: pointer;background: transparent;border: 0;}
</style>
<div class="ad_tcck_@Model.ID modal fade @(Model.ZStatus == 0 ? "d-none" : "")" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
	  <div class="modal-content">
	    <a href="@Model.LinkUrl" target="_blank"><img src="@Model.Image" /></a>
		<div class="modal-header">
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true" style="color:#0e0e0e"></button>
		 </div>
          <div class="modal-content">
              @Html.Raw(Model.Html)
          </div>
      </div>
    </div>
</div>

<script>
    $(".ad_tcck_@Model.ID").modal("show");
</script>