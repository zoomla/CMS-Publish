@model ZoomLa.BLL.B_Page
@using System.Data
@using ZoomLa.BLL
@using ZoomLa.Common
@{
    
}
<table class="table table-striped table-bordered">
    @foreach (DataRow dr in Model.moddt.Rows)
    {
        <tr>
            <td>
                @Html.CheckBox("ChkModel", Model.IsModelChk(Convert.ToInt32(dr["ModelID"])), new { @value = dr["ModelID"] })
                @MvcHtmlString.Create(StringHelper.GetItemIcon(DataConverter.CStr(dr["ItemIcon"])))<strong>@dr["ModelName"]</strong>
            </td>

            <td>
                @MvcHtmlString.Create(PageCommon.GetTlpDP("TxtModelTemplate_" + dr["ModelID"]))
                <input type="hidden" id="TxtModelTemplate_@dr["ModelID"]_hid" name="TxtModelTemplate_@dr["ModelID"]" value="@Model.GetTemplate(Convert.ToInt32(dr["ModelID"]))" />
            </td>
        </tr>
    }
</table>