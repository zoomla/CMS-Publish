@using ZoomLa.BLL
@using ZoomLa.Model
@{ 
    M_UserInfo mu = new B_User(Context).GetLogin();
}
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="renderer" content="webkit" />
<link rel="stylesheet" href="~/res/css/bootstrap.min.css" />
<script src="~/res/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/res/css/zico.min.css" />
<link type="text/css" rel="stylesheet" href="~/theme/css/V4user.css?version=@(ZoomLa.BLL.BLLCommon.Version_JS)" />
@RenderSection("head")
</head>
<body>
    <div id="n_site_top" class="n_site_top d-flex justify-content-between">
        <div id="n_site_top_l" class="n_site_topl"><a href="/Site/Default">智能建站平台</a></div>
        <div style="margin-top:10px;margin-right:10px;float:right;" id="headRDiv">
            @if (mu != null && mu.UserID > 0)
            {
                <span id="UserInfoSpan">
                    <span>@mu.UserName</span>
                    <a href="/User/Default" title="会员中心">会员中心</a>
                    <a href="/Plugins/Domain/Domname?Page=7" title="订单管理">订单管理</a>
                    <a href="/Plugins/Domain/Domname?Page=3" title="IDC管理">IDC管理</a>
                    <a href="/User/Logout" title="安全退出">安全退出</a>
                </span>
            }
            else
            {
                <span id="loginSpan">
                    <a href="/User/Login?ReturnUrl=@Context.Request.RawUrl()" style="margin-right:10px;">会员登录</a><a href="/User/Register" style="margin-right:10px;">会员注册</a>
                </span>
            }
        </div>
    </div>
    <div>
        <div id="n_site_naver">
            <div id="site_nav" class="n_site_nav">		
				<nav class="navbar navbar-expand-lg navbar-dark">
				  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
				  <div class="collapse navbar-collapse" id="navbarColor02">
					<ul class="navbar-nav me-auto">
					  <li class="nav-item active"> <a class="nav-link" href="/Site/Domain">域名注册<span class="visually-hidden sr-only">(current)</span></a> </li>
					  <li class="nav-item"> <a class="nav-link" href="/Site/Default">极速建站</a> </li>
					  <li class="nav-item"> <a class="nav-link" href="/Plugins/Domain/DomName">主机购买</a> </li>
					  <li class="nav-item"> <a class="nav-link" href="/Plugins/Domain/DomName">云端存储</a> </li>
					  <li class="nav-item"> <a class="nav-link" href="/Plugins/Domain/DomName">智能模板</a> </li>
					</ul>
					
				  </div>
				</nav>
				
				
				
				
				
            </div>
        </div>
        @RenderSection("content")
    </div>
    <div style="clear:both;"></div>
    <div id="n_site_bottom" class="fixed-bottom w-100">
        <div id="site_bot">
            <div id="site_bot_l">
                <ul class="list-inline btn-group">
                    <li><a href="http://www.z01.com/help" target="_blank">新手指南</a></li>
                    <li><a href="http://www.z01.com/mtv" target="_blank">学习资源</a></li>
                    <li><a href="http://ad.z01.com" target="_blank">广告代码</a></li>
                    <li><a href="http://help.z01.com/data/">数据字典</a></li>
                    <li><a href="http://www.z01.com/templet/" target="_blank">模板中心</a></li>
                    <li><a href="http://help.z01.com/" target="_blank">帮助文档</a></li>
                    <li><a href="http://bbs.z01.com" target="_blank">开发社区</a></li>
                    <li>Copyright &copy;@Call.SiteName All Rights Reserved</li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</body>
</html>