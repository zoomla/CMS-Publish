}
@{ 
    Layout = "_empty";
    string code = "";
    if (Mid > 0)
    {
        M_Content_Chart chartMod = new ZoomLa.BLL.Content.B_Content_Chart().SelReturnModel(Mid);
        code = chartMod.option;
    }
}
