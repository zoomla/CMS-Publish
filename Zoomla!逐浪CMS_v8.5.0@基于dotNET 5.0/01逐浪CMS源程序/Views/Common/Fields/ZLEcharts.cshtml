public int Mid { get { return DataConverter.CLng(Context.Request.GetParam("ID")); } }
public string CodeID { get { return string.IsNullOrEmpty(Context.Request.GetParam("CodeID")) ? "code" : Context.Request.GetParam("CodeID"); } }
//附加行为,如生成base64
