    function selProduct_cb(result) {
        app.activeItem.ProID = result.ID;
        Vue.set(app.list, app.activeIndex, app.activeItem);
        app.getFromAPI(app.activeItem, app.activeIndex);
        CloseComDiag();
    }
</script>