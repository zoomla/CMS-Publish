                                    <li>负责人：<strong>@GetName(dr["Principal"].ToString())</strong></li>
                                    <li>参与者：<strong>@GetName(dr["Participant"].ToString())</strong></li>
                                    <li>状态：<strong>@GetStatus(dr["Status"].ToString())</strong></li>
                                    <li><i class="zi zi_clock"></i> @dr["CreaeTime"]</li>
                                </ul>
