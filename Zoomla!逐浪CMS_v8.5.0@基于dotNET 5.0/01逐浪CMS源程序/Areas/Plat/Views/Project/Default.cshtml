                $.post("/Plat/Project/Project_Del", {
                    status: "0",
                    id: id
                    //},
                    //function (msg) {
                    //    alert(msg);
                })
                window.location.reload();
            }
        }

        setactive("项目");
        //remove leftnav
        var child = document.getElementById("leftnav");
        child.parentNode.removeChild(child);
    </script>
}