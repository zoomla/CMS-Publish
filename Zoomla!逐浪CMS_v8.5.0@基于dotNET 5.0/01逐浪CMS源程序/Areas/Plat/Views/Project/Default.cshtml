@using ZoomLa.SQLDAL
@model ZoomLa.SQLDAL.SQL.PageSetting
@functions{
    public string GetName(string id)
    {
        string str = "";
        DataTable dt = DBCenter.Sel("ZL_User");
        foreach (DataRow dr in dt.Rows)
        {
            string[] idArry = id.Trim().Split(",");
            for (int i = 0; i < idArry.Length; i++)
            {
                if (idArry[i] == dr["UserID"].ToString())
                {
                    str += dr["UserName"].ToString() + " ";
                }
            }
        }
        return str;
    }
    public string GetStatus(string i)
    {
        string str = "";
        switch (i)
        {
            case "1":
                str = "待办的";
                break;
            case "2":
                str = "进行中";
                break;
            case "3":
                str = "已完成";
                break;
            case "4":
                str = "已拒绝";
                break;
        }
        return str;
    }
    public string GetClass(string i)
    {
        string str = "";
        switch (i)
        {
            case "0":
                str = "未指定";
                break;
            case "1":
                str = "紧急";
                break;
            case "2":
                str = "正常";
                break;
            case "3":
                str = "次要";
                break;
            case "4":
                str = "淘汰";
                break;
            default:
                break;
        }
        return str;
    }
}
@section head{
<title>项目</title>
<style> .Obody { background: #fff; }</style>
}
@section content{
    <div class="container-xl" hidden>
        @Html.ActionLink("添加项目", "Project_Add", new { }, new { @class = "input-group-text float-end" })
        <table class="table table-striped table-bordered table-hover">
