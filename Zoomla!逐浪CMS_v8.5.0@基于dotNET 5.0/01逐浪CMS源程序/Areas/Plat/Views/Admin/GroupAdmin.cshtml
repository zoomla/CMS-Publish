        if (!confirm("确定要移除该部门吗")) { return false; }
        $("#tr_" + id).remove();
        $.post("GroupAdmin_API?action=del", { "id": id }, function (data) {
            console.log(data);
        });
    }
    function showsort() {
        ShowComDiag("GroupSort","部门排序");
    }
</script>
