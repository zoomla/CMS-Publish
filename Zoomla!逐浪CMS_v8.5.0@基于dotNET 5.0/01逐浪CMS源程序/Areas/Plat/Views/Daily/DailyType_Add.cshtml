@model ZoomLa.Model.M_MisInfo
@{ 
    Layout = "_empty";
}
@section head{<title>日程管理</title> }
@section content{
<form method="post" action="@MVCHelper.GetAction("DailyType_Add_Submit",Context.Request)">
<div>
    <table class="table table-bordered table-striped sys_table">
        <tr>
            <th class="w12rem_lg">标题</th>
            <td><input type="text" ID="Title_T" name="Title_T" class="form-control max20rem required" value="@Model.Title"/><input type="hidden" value="@ViewContext.HttpContext.Request.Query["userid"]" id="userid" name="userid" /></td>
        </tr>
        <tr>
            <th>类型</th>
            <td>
                <select class="form-control max20rem form-select" ID="Type_DP" name="Type_DP">
                    <option  value="0">记录</option>
                    <option  Value="1">小结</option>
                    <option  Value="2">今日计划</option>
                    <option  Value="3">备忘</option>
                    <option  Value="4">待办</option>
                    <option  Value="5">协商</option>
                    <option  Value="6">求助</option>
                    <option  Value="7">汇报</option>
                    <option  Value="8">日志</option>
                    <option  Value="9">消息</option>
                    <option  Value="10">其它</option>
                </select>
                <script>$("#Type_DP").val("@Model.Type");</script>
            </td>
        </tr>
        <tr>
            <th>分享</th>
            <td>
                <select class="form-control max20rem form-select" id="IsShare_RB" name="IsShare_RB">
                    <option value="1">是</option>
                    <option value="0">否</option>
                </select>
                <script>$("#IsShare_RB").val("@Model.IsShare");</script>
            </td>
        </tr>
        <tr>
            <th>推荐</th>
            <td>
                <select class="form-control max20rem form-select" id="IsElit_RB" name="IsElit_RB">
                    <option value="1">是</option>
                    <option value="0">否</option>
                </select>
                <script>$("#IsElit_RB").val("@Model.IsElit");</script>
            </td>
        </tr>
        <tr>
            <th>提醒</th>
            <td>
                <select class="form-control max20rem form-select" ID="IsWarn_RB" name="IsWarn_RB">
                    <option Value="1">提醒我</option>
                    <option Value="0">不提醒</option>
                </select>
                <script>$("#IsWarn_RB").val("@Model.IsWarn");</script>
            </td>
        </tr>
        <tr>
            <th>紧要程度</th>
            <td>
                <select class="form-control max20rem form-select" ID="Level_DP" name="Level_DP">
                    <option Value="0">不重要不紧急</option>
                    <option Value="1">重要</option>
                    <option Value="2">紧急</option>
                    <option Value="3">重要且紧急</option>
                </select>
                <script>$("#Level_DP").val("@Model.Level");</script>
            </td>
        </tr>
        <tr>
            <th>描述</th>
            <td>
                <textarea ID="Content_T" name="Content_T" class="form-control" rows="8">@Model.Content</textarea>
            </td>
        </tr>
        <tr>
        <th></th>
            <td>
                <input type="submit" class="btn btn-outline-info" value="保存信息"/>
            </td>
        </tr>
    </table>
</div>
</form>
 }
@section script{ 
<script>
    $("form").validate();
function HideMe() {
    parent.HideTypeDialog();
}
</script>
}