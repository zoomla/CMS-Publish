                <asp:Repeater runat="server" ID="ClassRPT">
                    <ItemTemplate>
                        <label>
                            <input type="checkbox" name="ClassIDS_chk" value="<%#Eval("RoomID") %>" /><%#Eval("RoomName") %></label>
                    </ItemTemplate>
