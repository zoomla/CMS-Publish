@using ZoomLa.Components
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
@Html.Partial("_layout_assets")
<link href="/res/css/weui.min.css" type="text/css" rel="stylesheet" />
<link href="/theme/css/V4User.css?version=@(ZoomLa.BLL.BLLCommon.Version_JS)" rel="stylesheet"/>
<script charset="utf-8" src="/Plugins/Ueditor/ueditor.config.js"></script>
<script charset="utf-8" src="/Plugins/Ueditor/ueditor.all.js"></script>
@RenderSection("head")
</head>
<body>
@Html.Partial("_leftmenu")
@RenderSection("content")
<script>
$(function () {
    //边栏事件
    $("#mimenu_btn").click(function (e) {
	if ($(".u_menu_left").width() > 0) {
	    $(".u_menu_left ul").fadeOut(100);
	    $(".u_menu_left").animate({ width: 0 }, 200);
	}
	else {
	    $(".u_menu_left").animate({ width: 150 }, 300);
	    $(".u_menu_left ul").fadeIn();
	}
    });
    $("#backimg_div").css("min-height", $(window).height());
    $(window).resize(function () { $("#backimg_div").css("min-height", $(window).height()); });
})
</script>
@RenderSection("script")
</body>
</html>