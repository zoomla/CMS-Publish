@using System.Data
@using ZoomLa.Common
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    DataTable nodeDT=(DataTable)ViewBag.nodeDT;
    int PubID=ViewBag.PubID;
    
}
@section head{
    <title>互动管理</title>
}
@section content{
<div id="pageflag" data-nav="index" data-ban="pub"></div>
<div class="container ">
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a title="会员中心" href="@Url.Action("Index","")">会员中心</a></li>
        <li class="breadcrumb-item active">我的互动</li>
    </ol>
</nav>	
    <div>
        <ul class="nav nav-tabs" id="rnewshd">
            @foreach (DataRow dr in nodeDT.Rows)
            {
                <li data-pid="@dr["PubID"]" class="nav-item"><a class="nav-link" href="?pid=@dr["PubID"]">@dr["PubName"]</a></li>
            }
        </ul>
            @Html.Partial("ManagePub_List",Model)
    </div>
</div>
}
@section script{
<script>
var pid = '@Context.Request.GetParam("pid")';
$("#rnewshd li[data-pid=" + pid + "]").find("a").addClass("active");
</script>
}
