@using System.Data;
@model ZoomLa.SQLDAL.SQL.PageSetting
@functions{

    public string ShowPirceMode(DataRow dr)
    {
        int mode = DataConverter.CLng(dr["PriceMode"]);
        if (mode == 1) { return "按件数"; }
        else { return "按重量"; }
    }
}
@{
    Model.cols = 7;
    Model.url = "DeliverType";
}
<div id="EGV">
    <table class="table table-bordered table-striped">
        <tr><td></td><td>ID</td><td>模板名称</td><td>计价方式</td><td>备注</td><td>备注(仅卖家)</td><td>操作</td></tr>
        @foreach (DataRow dr in Model.dt.Rows)
        {
            <tr>
                <td class="td_s"><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
                <td class="td_s">@dr["ID"]</td>
                <td><a href="AddDeliverType?id=@dr["id"]">@dr["TlpName"]</a></td>
                <td>@ShowPirceMode(dr)</td>
                <td>@dr["Remind"]</td>
                <td>@dr["Remind2"]</td>
                <td>
                    <a id="edit_btn" class="option_style" href='AddDeliverType?id=@dr["id"]'><i class="zi zi_pencilalt" title="修改"></i></a>
                    <a class="option_style" href="javascript:;" onclick="mvcpage.del({ ids: '@dr["id"]', url: 'deliver_del', confirm: '确定要移除吗' });"><i class="zi zi_trashalt" title="删除"></i></a>
                </td>
            </tr>
        }
        @Html.Partial("_page", Model)
    </table>
</div>