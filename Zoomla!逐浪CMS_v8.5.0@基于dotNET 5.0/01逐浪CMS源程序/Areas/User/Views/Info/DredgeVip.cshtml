}
@section head{<title>VIP信息</title>}
@section content{
    <form action="@MVCHelper.GetAction(Url.Action("DardgeVip_Open","info"),Context.Request)"  method="post">
        <div id="pageflag" data-nav="shop" data-ban="shop"></div>
		<div class="container">
		<nav aria-label="breadcrumb" role="navigation">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a title="会员中心" href="@Url.Action("index","")">会员中心</a></li>
			<li class="breadcrumb-item"><a href="@Url.Action("UserInfo","Info")">账户管理</a></li>
			<li class="breadcrumb-item active">VIP信息</li>
		</ol>
		</nav>
		</div>
        <div class="container btn_green">
			<ul class="nav nav-tabs" id="tabsnav">
			 	<li class="nav-item"><a class="nav-link" href="@Url.Action("UserInfo","Info")">注册信息</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("UserBase","info")">修改资料</a></li>
                <li class="nav-item"><a class="nav-link" href="UserBase?sel=Tabs1">头像设置</a></li>
                <li class="nav-item"><a class="nav-link active" href="@Url.Action("DredgeVip","info")">VIP卡</a></li>
			</ul>
            <div class="text-center">
                <div class="card">
<!--                    <div class="card-header"><i class="zi zi_creditCard"></i> VIP卡</div>-->
                    <div class="card-body">

						<div class="input-group mb-3">
						  <div class="input-group-prepend">
							<span class="input-group-text" id="basic-addon1">VIP号</span>
						  </div>
						  <input type="text" id="txtVIP" name="txtVIP" class="form-control text_md" title="VIP卡号不能为空" />
						</div>
						
						<div class="input-group mb-3">
						  <div class="input-group-prepend">
							<span class="input-group-text" id="basic-addon1">密 码</span>
						  </div>
						  <input type="password" id="txtPas" name="txtPas" class="form-control text_md" title="VIP密码不能为空" />
						</div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="开通VIP" class="btn btn-info" />
                    </div>
                </div>
            </div>
        </div>
    </form>
}
@section script{
    <script>
        $("form").validate();
		//导航处理
		$("#tabsnav ul li").find("a").removeClass("active");
		$("#tabsnav ul li").eq("2").find("a").addClass("active");
		
		$("#usernav1 ul li").removeClass("active");
    </script>
}
