@model System.Data.DataTable
@using System.Data
@using ZoomLa.Common
@{ 
    string totalMoney = DataConverter.CDouble(Model.Compute("SUM(ALLMoney)", "")).ToString("F2");
}

<div>
    <table class="table table-bordered table-striped" id="EGV">
        <tr><td>商品名</td><td>销售数</td><td>所属类别</td><td>销售金额</td></tr>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr><td><a href="/Shop/@(dr["ProID"])" target="_blank" title="查看商品">@dr["ProName"]</a></td><td>@dr["Pronum"]</td><td>@dr["NodeName"]</td><td>@DataConverter.CDouble(dr["AllMoney"]).ToString("F2")</td></tr>
        }
        <tr>
            <td colspan="4">
                销售总计：<label class="r_red_mid">@totalMoney</label>
                <input type="button" value="导出Excel" onclick="ZLHelper.OutToExcel()" class="btn btn-outline-info" />
            </td>
        </tr>
    </table>
</div>