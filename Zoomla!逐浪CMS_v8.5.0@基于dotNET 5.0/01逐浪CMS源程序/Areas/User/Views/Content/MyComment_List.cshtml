@using System.Data
@using ZoomLa.BLL.Helper
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 6;
    Model.url = "MyComment_Data";
}
<table class="table table-striped table-bordered table-hover">
<tr>
<td class="w1rem"></td>
<td>ID</td>
<td>标题</td>
<td>评论内容</td>
<td>发表日期</td>
</tr>
@foreach (DataRow dr in Model.dt.Rows)
{
<tr>
<td class="node_select"><input type="checkbox" value="@dr["CommentID"]" name="idchk" id="idchk" /></td>
<td>@dr["CommentID"]</td>
<td><a href="/Item/@dr["GeneralID"]" target="_blank">@dr["GTitle"]</a></td>
<td>
   @MvcHtmlString.Create(DataConverter.CStr(dr["Contents"]))
</td>
<td>@DateHelper.ToDate(dr["CommentTime"])</td>
</tr>

}
@Html.Partial("_page", Model)
</table>