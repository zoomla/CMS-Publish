@functions{
    public string GetUserName(string ids)
    {
        string username="";
        string[] idarry = ids.Trim().Split(",");
        for (int i = 0; i < idarry.Length; i++)
        {
            DataTable dt = DBCenter.Sel("ZL_User", "UserID=" + idarry[i]);
            foreach (DataRow dr in dt.Rows)
            {
                username+= dr["UserName"];
            }
        }
        return username;
    }
}
