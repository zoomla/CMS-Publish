@using System.Data;
@using ZoomLa.BLL.Helper
@using ZoomLa.BLL.Shop
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 5;
    Model.url = "Content_Data";
}
<div id="EGV">
<table class="table table-bordered table-hover table-striped">
<tr><td class="w1rem"></td><td class="td_s">ID</td><td>标题</td><td class="td_m">状态</td><td class="td_l text-end">操作</td></tr>
@foreach (DataRow dr in Model.dt.Rows)
{
    <tr ondblclick="location = 'ShowContent?ID=@dr["GeneralID"]';">
	<td class="node_select"><input type="checkbox" name="idchk" value="@dr["GeneralID"]" /></td>
	<td>@dr["GeneralID"]</td>
	<td><a href="AddContent?ID=@dr["GeneralID"]">@dr["Title"]</a></td>
	<td>@B_Content.GetStatusStr(Convert.ToInt32(dr["Status"]))</td>
    <td class="text-end">
        @if (DataConverter.CLng(Context.Request.GetParam("status")) == -2)
        {
            <a href="AddContent?ID=@dr["GeneralID"]" class="option_style" title="修改"><i class="zi zi_pencilalt"></i></a>
            <a href="javascript:;" class="option_style" onclick="mvcpage.del({ ids: '@dr["GeneralID"]', url: 'content_realdel', confirm: '确定要删除吗' });" title="删除"><i class="zi zi_trashalt"></i></a>
        }
        else
        {
            <a href="ShowContent?ID=@dr["GeneralID"]" class="option_style" title="后台预览"><i class="zi zi_eye"></i></a>
            <a href="AddContent?ID=@dr["GeneralID"]" class="option_style" title="修改"><i class="zi zi_pencilalt"></i></a>
            <a href="/Item/@dr["GeneralID"]" class="option_style" target="_blank"><i class="zi zi_globe"></i>预览</a>
            <a href="javascript:;" class="option_style" onclick="mvcpage.del({ ids: '@dr["GeneralID"]', url: 'content_del', confirm: '确定要移入回收站吗' });" title="删除"><i class="zi zi_trashalt"></i></a>
        }

    </td>
    </tr>
}
@Html.Partial("_page", Model)
</table>
</div>