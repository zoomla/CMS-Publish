@using ZoomLa.Common
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    
    int showtype = DataConverter.CLng(ViewBag.showtype);
}
@section head{
    <title>我的空间</title>
}
@section content{
    <div id="pageflag" data-nav="index" data-ban="zone"></div>
	<div class="container">
	<nav aria-label="breadcrumb" role="navigation">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a title="会员中心" href="/User/Default">会员中心</a></li>
		<li class="breadcrumb-item active">设定空间模板</li>
	</ol>
	</nav>
	</div>
    <div class="container btn_green">
        <div class="btn-group">
            <a class="btn btn-info" href='/User/userzone/Default'>空间信息</a>
            <a class="btn btn-info" href='/User/UserZone/FriendList'>好友</a>
            <a class="btn btn-info" href='/User/Exam/ClassManage'>班级</a>
        </div>
    </div>
    <div class="container" id="main_div">
        @switch (showtype)
        {
            case 1:
                {
                    <div class='alert alert-info'>未通过聚合认证会员无法开启个人主页!</div>
                }
                break;
            case 2:
                {
                    <div class='alert alert-info'><i class='zi zi_exclamationTriangle'></i>&nbsp系统未提供可用模板!</div>
                }
                break;
            default:
                {
                    <div class="alert alert-success">
                        当前模板:<span>@MvcHtmlString.Create(ViewBag.sname)</span>
                    </div>
                    @Html.Partial("MyZonePage_List",Model)
                }
                break;
        }
    </div>
}
@section script{
    <style type="text/css">
        #tlp_ul { }
        #tlp_ul li { float: left; margin-left: 10px; margin-bottom: 10px; }
        #tlp_ul .tlp_opdiv { margin-top: 5px; }
        #tlp_ul .tlpimg { display: inline-block; height: 142px; width: 182px; border: 1px solid #ddd; padding: 3px; }
        #main_div .alert{margin:10px auto;}
    </style>
}