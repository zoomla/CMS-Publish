
@{
    Layout = "_empty";
}
@section head{<title>在线支付</title> }
@section content{ 
<style>
.wxbind_body { background:#333;} /*微信绑定*/
.wxbind_body_c { position:absolute; top:50%; left:50%; -webkit-transform:translate(-50%,-50%); transform:translate(-50%,-50%); color:#fff; font-family:"STHeiti","Microsoft YaHei","黑体","arial";}
.wxbind_body_c h1 { margin-top:0; margin-bottom:20px; font-size:1.5em; text-align:center;}
.wxbind_body_c img { padding:20px; background:#fff;}
.wxbind_body_c p { margin-top:20px; margin-bottom:0; padding-top:5px; padding-bottom:5px; text-align:center; background:#232323; border-radius:100px; box-shadow:inset 0 5px 10px -5px #191919,0 1px 0 0 #444; -moz-box-shadow:inset 0 5px 10px -5px #191919,0 1px 0 0 #444; -webkit-box-shadow:inset 0 5px 10px -5px #191919,0 1px 0 0 #444; line-height:1.5em;}
</style>
<body class="wxbind_body">
<div class="wxbind_body_c">
<h1>欢迎使用支付宝手机网页支付</h1>
<img src="/Common/Common.ashx" id="bind_img" alt="二维码" width="280" height="280" />
<p>请打开支付宝，使用扫一扫完成支付！</p>
</div>
</body>


}
@section script{ 
<script>
$().ready(function(e) {
    $(".wxbind_body_c img").attr("src","/Common/Common?url="+window.location.href);
});
</script>

}
