@using System.Data
@using ZoomLa.BLL
@using ZoomLa.Common
@using ZoomLa.BLL.Helper
@model System.Data.DataTable
@{
   
}
<div class="container-fluid pe-0 mt-5 pt-1">
<div class="row sysRow table-responsive-md">
<table class="table table-hover table-striped table-bordered" id="EGV">
    <tr>
        <th scope="col" class="w1rem"></th>
        <th scope="col">ID</th>
        <th scope="col">@L.名称</th>
        <th scope="col">@L.备注</th>
        <th scope="col">@L.创建时间</th>
        <th scope="col">@L.操作</th>
    </tr>
    @foreach (DataRow dr in Model.Rows)
            {
        <tr ondblclick="location = 'CTypeAdd?ID=@dr["ID"]';">
            <td class="excel_no node_select"><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
            <td>@dr["ID"]</td>
            <td>@dr["value"]</td>
            <td>@dr["Remark"]</td>
            <td class="td_l">@DateHelper.ToDate(dr["CDate"])</td>
            <td class="excel_no td_l">
                <a href="CTypeAdd?ID=@dr["ID"]" class="option_style"><i class="zi zi_pencilalt"></i>@L.修改</a>
                <a href="javascript:;" class="option_style" onclick="mvcpage.del({ ids: '@dr["ID"]', url: 'ctype_del', confirm: '@Html.Raw(L.确定要删除吗)' });"><i class="zi zi_trashalt"></i>@L.删除</a>
            </td>
        </tr>
    }
</table>
</div>
</div>