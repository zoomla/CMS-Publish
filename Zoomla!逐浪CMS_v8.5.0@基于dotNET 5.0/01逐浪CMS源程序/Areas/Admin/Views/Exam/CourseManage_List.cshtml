@using System.Data
@using ZoomLa.Common
@using ZoomLa.Model
@using ZoomLa.BLL
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 9;
}
@functions{
    B_Exam_Class classBll = new B_Exam_Class();
    public string GetClass(string classid)
    {
        M_Exam_Class mquestion = classBll.GetSelect(DataConverter.CLng(classid));
        if (mquestion != null && mquestion.C_id > 0)
        {
            return mquestion.C_ClassName;
        }
        else
        {
            return "无分类";
        }
    }
}
<div class="table-responsive">
<table id="EGV" class="table table-striped table-bordered table-hover">
    <tr>
        <td class="w1rem"></td>
        <td>@L.课程名称</td>
        <td>@L.课程缩写</td>
        <td>@L.课程代码</td>
        <td>@L.热门课程</td>
        <td>@L.课程分类</td>
        <td>@L.学分</td>
        <td>@L.简介</td>
        <td>@L.操作</td>
    </tr>
    @if (Model.itemCount > 0)
    {
        foreach (DataRow dr in Model.dt.Rows)
        {
            <tr ondblclick="location = 'AddCourse?id=@dr["ID"]';">
                <td class="node_select"><input name="idchk" type="checkbox" value='@dr["ID"]' /></td>
                <td>@dr["CourseName"]</td>
                <td>@dr["CoureseThrun"]</td>
                <td>@dr["CoureseCode"]</td>
                <td>@(DataConverter.CLng(dr["Hot"]) == 1 ? "是" : "否")</td>
                <td>@GetClass(dr["CoureseClass"].ToString())</td>
                <td>@dr["CoureseCredit"]</td>
                <td>@dr["CoureseRemark"]</td>
                <td>
                    <a href="AddCourse?id=@dr["ID"]"><i class="zi zi_pencilalt" title="修改"></i></a>
                    <a href="javascript:;" onclick='mvapage.del({url: "Course_Del", ids: @dr["ID"], confirm: "@Html.Raw(L.确定要删除此课程吗)？"});'><i class="zi zi_trashalt" title="删除"></i></a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="9">@L.当前没有数据</td></tr>
    }
    @Html.Partial("_page", Model)
</table>
</div>