dataType: "json",
url: encodeURI("@Url.Action("Cm_information")"),
success: function (result) {
result.data.forEach(i => {
    leibie.forEach(j => {
    switch (j) {
        case "操作系统类":
            MyDiv = document.getElementById("lblSys");
            break;
        case "环境类":
            MyDiv = document.getElementById("profile");
            break;
        case "文档类":
