@model ZoomLa.Model.M_PayPlat

@section head{ <title>@L.微信支付</title>}
@section content{
@Call.SetBread(new Bread[] {
    new Bread("{admin}"),
    new Bread(Call.PathAdmin("Pay/PayPlat"),L.支付平台),
    new Bread() {url=Context.Request.RawUrl(), text=L.PC端微信支付,addon="" }}
    )
	<div class="pe-0">
    <div class="sysRow">
        <form method="post" action="WechatPlat_Submit">
            <table class="table table-striped table-bordered table-hover sys_table">
                <tr>
                    <th scope="col" class="w12rem_lg">APPID</th>
                    <td scope="col">
                        @Html.TextBoxFor(m => m.APPID, new { @class = "form-control max20rem required" })
                    </td>
                </tr>
                <tr>
                    <th>Secret</th>
                    <td>
                        @Html.TextBoxFor(m => m.Secret, new { @class = "form-control max20rem required" })
                    </td>
                </tr>
                <tr>
                    <th>@L.商户号</th>
                    <td>
                        @Html.TextBoxFor(m => m.AccountID, new { @class = "form-control max20rem required" })
                    </td>
                </tr>
                <tr>
                    <th>@L.商户密钥</th>
                    <td>
                        @Html.TextBoxFor(m => m.MD5Key, new { @class = "form-control max20rem required" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" ID="Save_B" class="btn btn-info" value="@L.保存信息" />
                    </td>
                </tr>
            </table>
        </form>
        <div class="alert alert-info">@L.仅用于微信PC端扫码支付</div>
    </div>
</div>
    }
@section script{
   <script>
        function ReClear() {
            $('.max20rem').val('');
        }
        $("form").validate();
    </script> 
    }