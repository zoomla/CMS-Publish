@model ZoomLa.Model.M_MailTemp
@section head{
<title>@L.创建邮件模板</title>
<script src="/Plugins/Ueditor/ueditor.config.js"></script>
<script src="/Plugins/Ueditor/ueditor.all.min.js"></script>
}
@section content{ 
@Call.SetBread(new Bread[] {
        new Bread("{admin}"),
		new Bread("MailTlp",L.邮件模板),
        new Bread() {url=Context.Request.RawUrl(), text=L.创建邮件模板,addon="" }}
		)
<form method="post" action="@MVCHelper.GetAction("MailTlpAdd_Submit",Context.Request)">
	<div class="">
    <table class="table table-striped table-bordered">
           <tr>
            <th><strong>@L.选择类型</strong></th>
            <td>
                <select ID="Type_DP" name="Type_DP" class="form-control max20rem form-select">
                    <option Value="1">@L.系统通知</option>
                    <option Value="2">@L.用户订阅</option>
                    <option Value="3">@L.贺卡消息</option>
                </select>
                <script>$("#Type_DP").val("@Model.Type")</script>
            </td>
        </tr>
        <tr>
            <th class="tdleft td_l"><strong>@L.模板名称</strong></th>
            <td>
                <input type="text" ID="TempName" name="TempName" class="form-control max20rem required" value="@Model.TempName"/></td>
        </tr>
        <tr><th class="tdleft"><strong>@L.预览图片</strong></th>
            <td>@Html.Partial("C_SFileUP",new C_SFileUP() {ID="Pic",SaveType="admin",Value=Model.Pic })</td>
        </tr>
        <tr>
			<td></td>
            <td>
                <textarea id="Content" name="Content" style="height:350px;width:960px;margin:0 auto;">@Html.Raw(Model.Content)</textarea>
            </td>
        </tr>
        <tr><td></td>
            <td>
                <input type="submit" class="btn btn-info" value="@L.保存信息"/>
                <a href="MailTlp" class="btn btn-outline-info">@L.返回列表</a>
            </td>
        </tr>
    </table>
	</div>
</form>
}
@section script{
    @Html.Raw(Call.GetUEditor("Content",3))
 }


