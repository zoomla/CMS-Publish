@model ZoomLa.SQLDAL.SQL.PageSetting
@functions{

}
@{
    string apiUrl = "Factory_API?action=";
}
<table class="table table-bordered table-striped table-hover" id="EGV">
    <thead>
        <tr>
            <th scope="col" class="w1rem"></th>
            <th scope="col" class="td_xs">ID</th>
            <th scope="col">@L.厂商名称</th>
            <th scope="col">@L.厂商缩写</th>
            <th scope="col">@L.厂商分类</th>
            <th scope="col">@L.厂商地址</th>
            <th scope="col">@L.联系电话 </th>
            <th scope="col">@L.电子邮箱 </th>
            <th scope="col">@L.网址 </th>
            <th scope="col">@L.操作</th>
        </tr>
    </thead>
    @foreach (DataRow dr in Model.dt.Rows)
    {
<tr ondblclick="location='FactoryAdd?id=@dr["id"]'" title="双击编辑">
    <td scope="row" class="node_select"><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
    <td>@dr["ID"]</td>
    <td data-bs-toggle="tooltip" title="" data-original-title="双击编辑">@dr["Producername"]</td>
    <td>@dr["Smallname"]</td>
    <td>@dr["CoClass"]</td>
    <td>@dr["Coadd"]</td>
    <td>@dr["Telpho"]</td>
    <td>@dr["Email"]</td>
    <td>@dr["CoWebsite"]</td>
    <td>
        <a href="FactoryAdd?id=@dr["id"]"><i class="zi zi_pencilalt" title="修改"></i></a>
        <a href="javascript:;" onclick="mvcpage.del({ url: '@("Factory_API?action=del")', ids: '@dr["ID"]', confirm: '@L.你确定将该数据删除吗', after: function () { location = location; } });"><i class="zi zi_trashalt" title="删除"></i>@L.删除</a>
    </td>
</tr>
        }
        @Html.Partial("_page")
    </table>
