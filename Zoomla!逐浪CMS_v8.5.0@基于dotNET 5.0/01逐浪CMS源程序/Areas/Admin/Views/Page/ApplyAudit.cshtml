@{

}
@section head{<title>黄页审核</title>}

@section content{
<div class="container-fluid" id="BreadDiv">
<div class="row">
<ol id="BreadNav" class="breadcrumb w-100" style="padding:.75rem 1rem;">
    <li class="breadcrumb-item"><a href='@(CustomerPageAction.customPath2)main'>@L.工作台</a></li>
    <li class="breadcrumb-item"><a href="ApplyAudit">@L.企业黄页</a></li>
    <li class="breadcrumb-item">@L.黄页审核</li>
    <div id="sel_box">
        <div class="input-group">
            <input type="text" id="skey" class="form-control" placeholder="@L.请输入关键词" onkeypress="selbox.search();" />
                <input type="button" class="btn btn-outline-secondary" value="@L.搜索" onclick="mvcpage.load();" />
        </div>
    </div>
    <div id="help" class="float-end text-center"><a href="javascript:;" class="help_btn active" onclick="selbox.toggle();"><i class="zi zi_search"></i></a></div>
</ol>
</div>
</div>
<div class="container-fluid">
<ul class="nav nav-tabs">
    <li class="nav-item" data-status="-100"><a class="nav-link" href="#tab0" data-bs-toggle="tab" onclick="ShowTabs(-100)">@L.全部</a></li>
    <li class="nav-item" data-status="99"><a class="nav-link" href="#tab1" data-bs-toggle="tab" onclick="ShowTabs(99)">@L.已审核</a></li>
    <li class="nav-item" data-status="0"><a class="nav-link" href="#tab2" data-bs-toggle="tab" onclick="ShowTabs(0)">@L.待审核</a></li>
</ul>
@Html.Partial("ApplyAudit_List")
<div class="btn-group">
<input type="button" class="btn btn-outline-secondary" value="@L.批量审核" onclick="mvcpage.bat({url: 'page_audit' });" />
<input type="button" class="btn btn-outline-secondary" value="@L.取消审核" onclick="mvcpage.bat({url: 'page_unaudit' });" />
<input type="button" class="btn btn-outline-secondary" value="@L.批量删除" onclick="mvcpage.bat({url: 'page_del' });" />
<input type="button" class="btn btn-outline-secondary" value="@L.批量推荐" onclick="mvcpage.bat({url: 'page_recom' });" />
<input type="button" class="btn btn-outline-secondary" value="@L.取消推荐" onclick="mvcpage.bat({url: 'page_unrecom' });" />
</div>
</div>
}
@section script{
<script src="/JS/Controls/ZL_Dialog.js"></script>
<script src="/JS/SelectCheckBox.js"></script>
<script >
    $(function () {
        var status = getParam("status");
        if (status) {
            $(".nav li[data-status='" + status + "']").find("a").addClass("active");
        }
        else { $(".nav li:first").find("a").addClass("active"); }
        $("#chkAll").click(function () { selectAllByName(this, "idchk"); });
    })
    function ShowTabs(status) {
        location.href = "ApplyAudit?status="+status;
    }
</script>
}
