    @section script{ 
    <script>
        function SetDel(id) {
            if (!confirm("确定要删除吗?")) { return false; }
            $("#DelID_Hid").val(id);
            $("#Del_Btn").click();
            return true;
        }
        function SetWithDraw(id) {
            if (!confirm("确定要撤回吗?")) { return false; }
            $("#DelID_Hid").val(id);
            $("#WithDraw_Btn").click();
        }
        $(function () {
            var proid = "<%:ProID%>";
            if (proid != "0") {
                var $lis = $("#proul li");
                $lis.find("a").removeClass("active");
                $("#proli_" + proid).find("a").addClass("active");
            }
        })
    </script>
}