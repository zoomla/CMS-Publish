@model System.Data.DataTable
@functions{
    public string CurrentView { get { return ViewBag.view; } }
    public string GetProName()
    {
        string proName = ViewBag.proName;
        string result = "";
        switch (CurrentView)
        {
            case "1":
                result = "待办公文" + proName;
                break;
            case "2":
                result = "已办公文" + proName;
                break;
            case "3":
                result = "我的公文" + proName;
                break;
            case "4":
                result = "我的借阅" + proName;
                break;
        }
        return result;
    }

}
