@model ZoomLa.SQLDAL.SQL.PageSetting
@functions{
          
        public string SubStr(string str, int len = 50)
        {
            return StringHelper.SubStr(str, len);
        }

}
@section head{<title>借阅列表</title> }
@section content{ 
    <ol id="BreadNav" class="breadcrumb navbar-fixed-top">
        <li><a href="/Office/Index/Main">办公管理</a></li>
        <li><a href="FiledList">已归档公文</a></li>
        <li class="active">借阅记录</li>
    </ol>
    <div style="height: 40px;"></div>
    <table class="table-striped table-bordered table-striped">
        <thead><tr>
            <td></td>
            <td>借阅公文</td>
            <td>借阅人</td>
            <td>备注</td>
            <td>操作</td>
            </tr></thead>
        @foreach (DataRow dr in Model.dt.Rows)
        {
            <tr>
                <td><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
                <td>@SubStr(DataConvert.CStr(dr["DocTitles"]))</td>
                <td>@SubStr(DataConvert.CStr(dr["UNames"]))</td>
                <td>@SubStr(DataConvert.CStr(dr["Remind"]))</td>
                <td>
                      <a href="AddBorrow?id=@dr["ID"]">修改</a>
                    @*<asp:LinkButton runat="server" CommandName="del2" CommandArgument='<%#Eval("ID") %>' OnClientClick="return confirm('确定要删除吗');">删除</asp:LinkButton>*@
                </td>
            </tr>
        }
    </table>

}
