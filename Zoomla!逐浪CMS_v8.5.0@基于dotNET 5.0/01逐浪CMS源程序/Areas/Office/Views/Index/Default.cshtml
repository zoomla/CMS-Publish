        protected B_User buser = new B_User();
        public M_OA_UserConfig ucMod = new M_OA_UserConfig();
        

        public string GetUserID(int userID)
        {
            string result = "";
            if (userID < 10)
            {
                result = "00" + userID;
            }
            else if (userID >= 10)
            {
                result = "0" + userID;
            }
            else
            {
                result = userID.ToString();
            }
            return result;
        }

}
