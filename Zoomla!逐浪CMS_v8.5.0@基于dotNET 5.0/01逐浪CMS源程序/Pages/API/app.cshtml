        private void checkSign(string sign)
        {
            if (string.IsNullOrEmpty(sign)) { throw new Exception("sign is null"); }
            string[] tokens = sign.Split('-');
            if (tokens.Length != 2) { throw new Exception("token格式错误"); }
            DataTable dt = DBCenter.Sel("ZL_NodeJs_Token", "token = '" + tokens[1] + "'");
            if (dt.Rows.Count < 1 ) { throw new Exception("token不存在"); }
            DataRow dr = dt.Rows[0];

            MD5 md5 = MD5.Create();
            byte[] buffer = Encoding.Default.GetBytes(dr["token"].ToString() + dr["time"].ToString());
            byte[] md5buffer = md5.ComputeHash(buffer);
            string token = null;
            foreach (byte b in md5buffer)
            {
                token += b.ToString("x2");
            }

            if (!tokens[0].Equals(token)) { throw new Exception("token不一致"); }

            //验证成功则删除
            DBCenter.Del("ZL_NodeJs_Token", "ID", DataConvert.CLng(dr["ID"].ToString()));
        }

