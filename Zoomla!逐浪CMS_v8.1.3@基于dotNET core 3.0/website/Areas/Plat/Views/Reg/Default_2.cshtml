@section  head{
    <title>邮件发送</title>
 }
@section content{ 
    <div id="Step2_Div" style="background-color:white;width:600px;border-radius:5px;position:absolute;top:40%;left:30%;padding-left:20px;padding:20px 20px 20px 20px;z-index:2;">
        <div style="position:absolute;right:-20px;top:-20px;cursor:pointer;" title="关闭" onclick="closeme();"><span class="fa fa-remove" style="color:white;"></span></div>
        <div style="padding:0 0 20px 0;"><span>我们已经发送注册邮件到您的邮箱，请点击邮件中的激活链接完成注册。</span></div>
        <div style="padding:0 0 20px 0;">
            <i class="fa fa-check" style="font-size:25px;color:green;"></i>
            <span style="font-size:20px;font-weight:bold;margin-left:10px;">请验证您的邮箱完成注册...</span>
        </div>
        <div>
            <a href="@(B_Plat_Common.GetMailSite(ViewBag.email))" class="btn btn-primary" target="_blank" ID="MailSite_A">前往邮箱激活注册</a>
            <span style="float:right;margin-top:15px;"><a href="#">重发邮件?</a><a href="#" style="margin-left:10px;">收不到邮件?</a></span>
        </div>
    </div>

}