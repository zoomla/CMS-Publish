@using System.Data
@{
    DataTable Details = (DataTable)ViewBag.Details;
    
}
@section head{
    <title>查看信息</title>
}
@section content{
<div class="container">
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a title="会员中心" href="@Url.Action("Default","")">会员中心</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Default","Pages")">企业黄页</a></li>
        <li class="breadcrumb-item active">查看信息</li>
    </ol>
</nav>	
    <table class="table table-striped table-bordered table-hover" cellspacing="0" cellpadding="4" style="font-size:12px;width:100%;border-collapse:collapse;margin-bottom: 3px; margin-top: 2px;">
        <tbody>
            @foreach (DataRow row in Details.Rows)
            {
                <tr>
                    <td class="tdbgleft" align="center" style="font-weight:bold;width:15%;">@row["Title"]</td>
                    <td align="left">@row["Content"]</td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align: center;">
        <a href="@ViewBag.AddUrl" class="btn btn-primary">回复</a>
        <a href="@ViewBag.ReturnUrl" class="btn btn-primary">返回</a>
    </div>
</div>
<script>
//导航处理
	$("#usernav1 ul li").removeClass("active").siblings().eq(4).addClass("active");
</script>
}
