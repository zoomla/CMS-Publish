@model ZoomLa.Model.M_RoleInfo
@section head{<title>@L.角色管理</title> }
@section content{
    @Call.SetBread(new Bread[] {
        new Bread("{admin}"),
        new Bread(Call.PathAdmin("User/UserManage"),L.用户管理),
        new Bread("UserRole",L.角色列表),
        new Bread() {url="", text=L.角色管理}})
<div class=" list_choice">
    <form method="post" action="@MVCHelper.GetAction("UserRoleAdd_Submit",Context.Request)">
        <table class="table table-striped table-bordered sys_table">
            <tr>
                <th class="w12rem_lg">@L.角色名称</th>
                <td>@Html.TextBoxFor(m => m.RoleName, new { @class = "form-control max20rem required" })</td>
            </tr>
            <tr>
                <th>@L.角色说明</th>
                <td>@Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="@L.保存信息" class="btn btn-outline-info" />
                    <a href="UserRole" class="btn btn-outline-info">@L.返回列表</a>
                </td>
            </tr>
        </table>
    </form>
</div>
}
@section script{


}
