        //后台返回的Json中必须包含Layer,
        var childTlp = "<tr data-layer='@@Layer' data-id='@@Cateid' data-pid='@@CatePid' onclick='ShowChild(this,@@Cateid);' ondblclick='ToggleChild(this);'>"
