@using ZoomLa.Components
@{
Layout = "~/Areas/AdminMVC/Views/Shared/_layTop.cshtml";
}
@section head{<title>黄页配置</title>}
@section content{
<div class="container-fluid" id="BreadDiv">
    <div class="row">
        <ol id="BreadNav" class="breadcrumb fixed-top w-100">
            <li class="breadcrumb-item"><a href='@(CustomerPageAction.customPath2)I/Main.aspx'>工作台</a></li>
            <li class="breadcrumb-item"><a href='ApplyAudit'>企业黄页</a></li>
            <li class="breadcrumb-item">黄页配置</li>
        </ol>
    </div>
</div>
<form method="post" action="PageConfig_Update" class="w-100">
<div class="container-fluid pr-0">
<div class="row sysRow list_choice">
<table class="table table-bordered table-striped sys_table">
    <tr>
        <th class="w12rem_lg"><strong>申请是否需要审核</strong></th>
        <td>
            <input type="checkbox" class="switchChk" id="RegPageStart_Chk" name="RegPageStart_Chk" @(SiteConfig.SiteOption.RegPageStart ? "checked='checked'" : "") />
        </td>
    </tr>
    <tr>
        <th><strong>黄页内容默认审核</strong></th>
        <td>
            <input type="checkbox" class="switchChk" id="IsAudit_Chk" name="IsAudit_Chk" @(SiteConfig.YPage.IsAudit ? "checked='checked'" : "") />
        </td>
    </tr>
    <tr>
        <th><strong>用户可否自建栏目</strong></th>
        <td>
            <input type="checkbox" class="switchChk" id="UserCanNode_Chk" name="UserCanNode_Chk" @(SiteConfig.YPage.UserCanNode ? "checked='checked'" : "") />
        </td>
    </tr>
    <tr><td></td><td>
        <input type="submit" value="保存配置" class="btn btn-info" />
        <a href="PageStyle" class="btn btn-outline-info">返回列表</a></td>
    </tr>
</table>
</div>
</div>
</form>
}
@section script{
<link type="text/css" href="/dist/css/bootstrap-switch.min.css" rel="stylesheet" />
<script src="/dist/js/bootstrap-switch.js"></script>
}