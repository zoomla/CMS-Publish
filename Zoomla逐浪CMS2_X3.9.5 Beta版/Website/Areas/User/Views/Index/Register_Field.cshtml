@using ZoomLa.Components
@model System.String
@{
    string css = "required";
    MvcHtmlString required = MvcHtmlString.Create("<span class=\"required_sp\">*</span>");
    string[] fields = SiteConfig.UserConfig.RegFieldsMustFill.Split(',');
    switch (Model)
    {
        case "select":
            css = "";
            required = MvcHtmlString.Create("");
            fields = SiteConfig.UserConfig.RegFieldsSelectFill.Split(',');
            break;
        case "must":
            break;
    }
}
@if (fields.Contains("ParentUser"))
{

<div class="weui-cell">
<div class="weui-cell__hd"><label class="weui-label">推荐人 @required</label></div>
<div class="weui-cell__bd">
<input type="text" id="TxtParentUser" name="TxtParentUser" class="form-control @css input-sm" title="推荐人不能为空" onblur="CheckParentUser(this)" />
<div class="msg"></div>
<script>
function CheckParentUser(input) {
if (ZL_Regex.isEmpty(input.value)) { return; }
reghelp.check("puser", input.value, function () { reghelp.showok(input); }, function (model) { reghelp.showerr(model.retmsg, input); });
}
$("#TxtParentUser").val($("#ParentUser_Hid").val());
</script>
</div>
</div>
}
