@using System.Data
@using ZoomLa.Common
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 8;
}
@functions{
    public string GetAuth(string auth)
    {
        string result = "";
        if (auth.Contains("settle")) { result += "结款,"; }
        return result.Trim(',');
    }
}
<table id="EGV" class="table table-bordered table-striped">
    <tr>
        <td class="td_s"></td>
        <td>ID</td>
        <td>用户名</td>
        <td>姓名</td>
        <td>权限</td>
        <td>创建时间</td>
        <td>备注</td>
        <td>操作</td>
    </tr>
    @foreach (DataRow dr in Model.dt.Rows)
    {
        <tr>
            <td><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
            <td>@dr["ID"]</td>
            <td>@dr["UserName"]</td>
            <td>@dr["HoneyName"]</td>
            <td>@GetAuth(dr["Auth"].ToString())</td>
            <td>@DataConverter.CDate(dr["CDate"]).ToString("yyyy-MM-dd")</td>
            <td>@dr["Remind"]</td>
            <td>
                <a href="AddDeliverMan?id=@dr["ID"]"><i class="fa fa-pencil"></i>修改</a>
                <a href="javascript:;" onclick='mvcpage.del({ ids: @dr["id"], url: "DeliveryMan_Del",confirm:"确定要删除吗" });'><i class="fa fa-trash"></i>删除</a>
            </td>
        </tr>
    }
    @Html.Partial("_page", Model)
</table>