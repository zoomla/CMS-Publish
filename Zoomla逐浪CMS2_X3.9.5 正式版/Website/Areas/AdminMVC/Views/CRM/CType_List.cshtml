@using System.Data
@using ZoomLa.BLL
@using ZoomLa.Common
@using ZoomLa.BLL.Helper
@model System.Data.DataTable
@{
   
}
<div class="container-fluid pr-0">
<div class="row sysRow list_choice table-responsive-md">
<table class="table table-striped table-bordered" id="EGV">
    <tr>
        <th scope="col" class="w1rem"></th>
        <th scope="col">ID</th>
        <th scope="col">名称</th>
        <th scope="col">备注</th>
        <th scope="col">创建时间</th>
        <th scope="col">操作</th>
    </tr>
    @foreach (DataRow dr in Model.Rows)
            {
        <tr>
            <td class="excel_no"><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
            <td>@dr["ID"]</td>
            <td>@dr["value"]</td>
            <td>@dr["Remark"]</td>
            <td class="td_l">@DateHelper.ToDate(dr["CDate"])</td>
            <td class="excel_no td_l">
                <a href="CTypeAdd?ID=@dr["ID"]" class="option_style"><i class="zi zi_pencilalt"></i>修改</a>
                <a href="javascript:;" class="option_style" onclick="mvcpage.del({ ids: '@dr["ID"]', url: 'ctype_del', confirm: '确定要删除吗' });"><i class="zi zi_trashalt"></i>删除</a>
            </td>
        </tr>
    }
</table>
</div>
</div>