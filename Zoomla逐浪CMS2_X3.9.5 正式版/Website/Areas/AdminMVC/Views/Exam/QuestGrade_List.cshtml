@using System.Data
@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 
    Model.cols = 4;
}
<div id="EGV">
	<div class="container-fluid pr-0">
	<div class="row sysRow list_choice table-responsive-md">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td class="w1rem" scope="col"></td>
            <td scope="col">ID</td>
            <td scope="col">@(ViewBag.cateName)名称</td>
            <td scope="col">操作</td>
        </tr>
        @foreach (DataRow dr in Model.dt.Rows)
        {
            <tr>
                <td scope="col"><input type="checkbox" value="@dr["GradeID"]" data-name="@dr["GradeName"]" name="idchk" /></td>
                <td scope="col">@dr["GradeID"]</td>
                <td scope="col">@dr["GradeName"]</td>
                <td scope="col">
                    <a href="javascript:;" onclick="ShowGrade(@dr["GradeID"],'@dr["GradeName"]')" ><i class="zi zi_pencilalt"></i>修改</a>
                    <a href="QuestList?@ViewBag.paraName=@dr["GradeID"]" ><i class="zi zi_listalt"></i>试题管理</a>
                    <a href="javascript:;" onclick='mvcpage.del({url: "QuestGrade_Del", id: @dr["GradeID"], confirm: "是否确认删除"});'><i class="zi zi_trashalt"></i>删除</a>
                </td>
            </tr>
        }
        @Html.Partial("_page", Model)
    </table>
	</div>
	</div>
</div>