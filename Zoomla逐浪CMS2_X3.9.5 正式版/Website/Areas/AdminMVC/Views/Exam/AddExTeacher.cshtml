@using ZoomLa.AppCode.Controls
@model ZoomLa.Model.M_ExTeacher
@{
Layout = "~/Areas/AdminMVC/Views/Shared/_layTop.cshtml";
}
@section head{
    <script type="text/javascript" src="/Plugins/Ueditor/ueditor.config.js"></script>
    <script type="text/javascript" src="/Plugins/Ueditor/ueditor.all.min.js"></script>
    <title>添加教师</title>
}
@section content{
<div class="w-100">
    <div id="BreadDiv" class="container-fluid">
        <div class="row">
            <ol id="BreadNav" class="breadcrumb fixed-top w-100">
                <li class="breadcrumb-item"><a href='@(CustomerPageAction.customPath2)I/Main.aspx'>工作台</a></li>
                <li class="breadcrumb-item"><a href='Papers_System_Manage'>教育模块</a></li>
                <li class="breadcrumb-item"><a href='ExTeacherManage'>培训资源库</a></li>
                <li class="breadcrumb-item"><a href='ExTeacherManage'>教师管理</a></li>
                <li class="breadcrumb-item">@(Model.ID > 0 ? "修改教师" : "添加教师")</li>
            </ol>
        </div>
    </div>
    <form method="post" action="@MVCHelper.GetAction("Teacher_Add",Request)">
<div class="container-fluid pr-0">
<div class="row sysRow list_choice table-responsive-md">
        <table class="table table-striped table-bordered table-hover sys_table">
            <tbody id="Tabs0">
                <tr>
                    <th scope="col" class="w12rem_lg">教师名称</th>
                    <td scope="col" class="bqright">
                        @Html.TextBoxFor(m => m.TName, new { @class = "form-control max20rem" })
                    </td>
                </tr>
                <tr>
                    <th>教师职位</th>
                    <td class="bqright">
                        @Html.TextBoxFor(m => m.Post, new { @class = "form-control max20rem" })
                    </td>
                </tr>
                <tr>
                    <th>授课科目</th>
                    <td class="bqright">
                        @Html.Partial("C_TreeTlpDP", (C_TreeTlpDP)ViewBag.treeMod)
                    </td>
                </tr>
                <tr>
                    <th>授课名称</th>
                    <td class="bqright">
                        @Html.TextBoxFor(m => m.Teach, new { @class = "form-control max20rem" })
                    </td>
                </tr>
                <tr>
                    <th>教师信息</th>
                    <td>
                        @Html.TextAreaFor(m => m.Remark, new { @style = "width:700px;height:200px;" })
                    </td>
                </tr>
            </tbody>
            <tr class="tdbgbottom">
				<th></th>
                <td>
                    <button type="submit" class="btn btn-info">保存</button>
                    <button type="button" class="btn btn-outline-info" onclick="location.href = 'ExTeacherManage';">返回列表</button>
                </td>
            </tr>
        </table>
		</div>
		</div>
    </form>
</div>
}
@section script{
    <script type="text/javascript" src="/JS/Dialog.js"></script>
    @MvcHtmlString.Create(Call.GetUEditor("Remark", 2))
    <script type="text/javascript">
        $(function () {
            $("form").validate({
                rules: {
                    TName: { required: true },
                    Teach: { required: true }
                },
                messages: {
                    TName: { required: "教师名称不能为空" },
                    Teach: { required: "授课信息不能为空" }
                },
            });
        });
    </script>
}
