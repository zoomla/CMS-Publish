@using ZoomLa.Controls
@using ZoomLa.AppCode.Controls
@model ZoomLa.Model.M_PageStyle
@{
Layout = "~/Areas/AdminMVC/Views/Shared/_layTop.cshtml";
}
@section head{<title>黄页样式</title>}
@section content{
<div class="container-fluid" id="BreadDiv">
    <div class="row">
        <ol class="breadcrumb fixed-top w-100" id="BreadNav">
            <li class="breadcrumb-item"><a href='@(CustomerPageAction.customPath2)Main.aspx'>工作台</a></li>
            <li class="breadcrumb-item"><a href="PageStyle">样式列表</a></li>
            <li class="breadcrumb-item">样式管理</li>
        </ol>
    </div>
</div>
<form method="post" action="@MVCHelper.GetAction("Style_Add",Request)" class="w-100">
<div class="container-fluid pr-0">
<div class="row sysRow table-responsive-md list_choice">
<table class="table table-striped table-bordered sys_table ">
        <tbody>
            <tr>
                <th class="w12rem_lg"><strong>样式名称<span class="text-danger">*</span></strong></th>
                <td>
                    <input type="text" id="PageNodeName" name="PageNodeName" class="form-control max20rem required" value="@Model.PageNodeName"  />
                </td>
            </tr>
            <tr>
                <th><strong>样式目录</strong><span class="text-danger">*</span></th>
                <td>
                    <input type="text" id="StylePath" name="StylePath" class="form-control max20rem required" value="@Model.StylePath" />
					<small class="text-muted">模板实际路径为:样式目录+黄页栏目所选模板</small>
                </td>
            </tr>
            <tr>
                <th><strong>首页模板</strong></th>
                <td>
                    @MvcHtmlString.Create(PageCommon.GetTlpDP("TemplateIndex"))
                    <input type="hidden" name="TemplateIndex_hid" id="TemplateIndex_hid" value="@Model.TemplateIndex" />
                </td>
            </tr>
            <tr>
                <th><strong>模板预览</strong></th>
                <td>
                    @Html.Partial("C_SFileUP", new C_SFileUP { FileType = "img", ID = "TemplateIndexPic",Value=Model.TemplateIndexPic })
                </td>
            </tr>
            <tr id="Tr3">
                <th>
                    <strong>排列顺序</strong></th>
                <td>
                    <input type="text" class="form-control max20rem" id="orderid" name="orderid" value="@Model.Orderid" />
					<small class="text-muted">升序排序,越小越前</small>
                </td>
            </tr>
            <tr><td></td>
                <td>
                    @*<asp:Button ID="Button1" class="btn btn-info" runat="server" Text="保存" OnClientClick="checkdata()" OnClick="Button1_Click" />*@
                    <input type="submit" class="btn btn-info" value="保存信息">
                    <a href="PageStyle" class="btn btn-outline-info">返回列表</a>
                </td>
            </tr>
        </tbody>
    </table>
	</div>
	</div>
</form>
@Html.Partial("C_TlpDP", new C_TlpDP("TemplateIndex",""))
}
@section script{
<script src="/JS/Controls/ZL_Dialog.js"></script>
<script src="/JS/DatePicker/WdatePicker.js"></script>
<script>
    $(function () {
        Tlp_initTemp();
        $("form").validate({});
    })
</script>
}