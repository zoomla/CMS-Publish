                  + " LEFT JOIN"
                  + " (SELECT COUNT(A.ID) AS SellCount,B.Nodeid FROM ZL_CartPro A LEFT JOIN ZL_Commodities B ON A.ProID=B.ID GROUP BY B.Nodeid) Cart"
