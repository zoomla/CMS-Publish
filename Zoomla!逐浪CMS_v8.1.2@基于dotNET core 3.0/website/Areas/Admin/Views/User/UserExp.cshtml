@model ZoomLa.Model.M_UserInfo
@functions{
    public int ExpType { get { return DataConverter.CLng(ViewBag.ExpType); } }
    public string GetTypeName()
    {
        switch (ExpType)
        {
            case 1:
                return "余额";
            case 2:
                return "银币";
            case 3:
                return "积分";
            case 4:
                return "点券";
            case 5:
                return "虚拟币";
            case 6:
                return "信誉值";
            default:
                return "";
        }
    }
    //根据类型获取币种值
    public double GetExp(M_UserInfo mu)
    {
        switch (ExpType)
        {
            case 1:
                return mu.Purse;
            case 2:
                return mu.SilverCoin;
            case 3:
                return mu.UserExp;
            case 4:
                return mu.UserPoint;
            case 5:
                return mu.DummyPurse;
            case 6:
                return mu.UserCreit;
            default:
                return 0;
        }
    }
}
@{ 
    
}
@section head{ 
<title>会员@(GetTypeName())</title>
}
@section content{ 
